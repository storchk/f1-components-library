{
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
